@page
@model IndexModel
@{
    ViewData["Title"] = "Definition";
    Layout = null;
}


<form method="post">
    <div>
        Workflow:
    </div>
    <div>
        <textarea rows="35"
                  cols="100"
                  data-val="true"
                  id="MainText"
                  name="Input.Description"></textarea>
    </div>
    <div>
        <button type="submit"
            name="submit"
            value="Register">
